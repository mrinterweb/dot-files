# Enable vi key bindings
# bindkey -v
# bindkey -e

# ---------  Git Alias
alias gs="git status"
# alias gca="git commit -a"
# alias gcp="git cherry-pick"
# alias gco="git checkout"

alias be="bundle exec"
alias ack=ack-grep
alias release="git tag -a -s"
alias cdr="cd .. && cd -"
alias todo="w2do --color"
alias psearch="ps aux | grep"
alias pp='ruby -rap -rjson -e "ap JSON.parse(STDIN.read), indent: 2"'
alias genctags='bundle list --paths=true | xargs ctags --language-force=ruby --extra=+f -R app lib spec test'

export LESS="-i -n -R"
export EDITOR=vim
export rvm_source_path=$rvm_path/src
# Tune the GC like Twitter does
export RUBY_GC_HEAP_INIT_SLOTS=500000
