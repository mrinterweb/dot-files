# HIST_STAMPS="mm/dd/yyyy"

# Would you like to use another custom folder than $ZSH/custom?
# ZSH_CUSTOM=/path/to/new-custom-folder

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(gitfast bundler history-substring-search)

source $ZSH/oh-my-zsh.sh

# fpath=(source/zsh-completions $fpath)
# Customize to your needs...

[[ -s "/home/sean/.rvm/scripts/rvm" ]] && source "/home/sean/.rvm/scripts/rvm"

extra_paths=(
$HOME/scripts
$HOME/.rvm/bin
$HOME/Programs/android_sdk/platform-tools
$HOME/Programs/android_sdk/tools
$HOME/.npm-packages/bin
$HOME/source/couchbase-sync-gateway/bin
/usr/local/share/npm/bin
/usr/local/heroku/bin
$HOME/android/platform-tools
)

for ex_path in ${extra_paths[@]}
do
  if [[ -d $ex_path ]] ; then
    export PATH=$PATH:$ex_path
  fi
done


